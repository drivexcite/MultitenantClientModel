{
  "DisableAuthenticationAndAuthorization": "true",
  "ConnectionStrings": {
    "ClientsDbConnectionString": "Server=(local);Database=Clients;Trusted_Connection=True;"
  },
  "TokenProviderOptions": {
    "Issuer": "https://dev-318215.okta.com/oauth2/aus15ubkj0WHGsqEV4x6",
    "Audience": "UserManagement"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinumumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "%BASEDIR%\\Logs\\client_api_log.txt",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10000000
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Client API"
    }
  }
}
